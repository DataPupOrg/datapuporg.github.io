---
export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "DataPup - The database client that doesn't bite", image = "/og-image.png" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Theme -->
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();
      
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #AAB2FF;
    --color-primary-dark: #8892E8;
    --color-primary-light: #C5CCFF;
    --color-primary-rgb: 170, 178, 255;
    --color-bg: #ffffff;
    --color-bg-secondary: #f8f9ff;
    --color-bg-tertiary: #f0f2ff;
    --color-text: #111827;
    --color-text-secondary: #6b7280;
    --color-border: #e5e7eb;
    --color-card: #ffffff;
    --color-accent: #FFB2D9;
    --color-accent-light: #FFD4E8;
    --color-success: #10b981;
    --color-warning: #f59e0b;
    --gradient-primary: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    --gradient-radial: radial-gradient(circle at top right, var(--color-primary-light) 0%, transparent 50%);
    --gradient-hero: linear-gradient(135deg, rgba(170, 178, 255, 0.1) 0%, rgba(255, 178, 217, 0.05) 100%);
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-glow: 0 0 20px rgba(170, 178, 255, 0.3);
    --glass-bg: rgba(255, 255, 255, 0.7);
    --glass-border: rgba(255, 255, 255, 0.3);
    --blur-md: blur(12px);
    --blur-lg: blur(24px);
    --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-base: 300ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-slow: 500ms cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  html.dark {
    --color-primary: #C5CCFF;
    --color-primary-dark: #AAB2FF;
    --color-primary-light: #E0E4FF;
    --color-primary-rgb: 197, 204, 255;
    --color-bg: #0f0f1a;
    --color-bg-secondary: #1a1a2e;
    --color-bg-tertiary: #252541;
    --color-text: #f9fafb;
    --color-text-secondary: #9ca3af;
    --color-border: #2a2a4a;
    --color-card: #1a1a2e;
    --color-accent: #FFB2D9;
    --color-accent-light: #FFC9E3;
    --gradient-primary: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    --gradient-radial: radial-gradient(circle at top right, rgba(170, 178, 255, 0.2) 0%, transparent 50%);
    --gradient-hero: linear-gradient(135deg, rgba(170, 178, 255, 0.15) 0%, rgba(255, 178, 217, 0.1) 100%);
    --shadow-glow: 0 0 30px rgba(170, 178, 255, 0.4);
    --glass-bg: rgba(26, 26, 46, 0.7);
    --glass-border: rgba(255, 255, 255, 0.1);
  }
  
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  
  html {
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    scroll-behavior: smooth;
  }
  
  body {
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    transition: background-color 0.3s ease, color 0.3s ease;
  }
  
  a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  a:hover {
    color: var(--color-primary-dark);
  }
  
  h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
    font-weight: 600;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  @media (min-width: 768px) {
    .container {
      padding: 0 2rem;
    }
  }
</style>