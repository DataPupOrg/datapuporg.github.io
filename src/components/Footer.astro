---
const currentYear = new Date().getFullYear();

const links = [
  { label: 'GitHub', href: 'https://github.com/DataPupOrg/DataPup' },
  { label: 'Discord', href: 'https://discord.gg/datapup' },
  { label: 'Discussions', href: 'https://github.com/DataPupOrg/DataPup/discussions' },
];
---

<footer class="footer py-8 section">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <div class="flex items-center gap-2 mb-2">
          <img src="/logo.svg" alt="DataPup" width="24" height="24" class="footer-logo" />
          <span class="font-semibold">DataPup</span>
        </div>
        <p class="text-sm text-muted">
          Open-source database client for modern developers.
        </p>
      </div>
      
      <div class="footer-links">
        {links.map(link => (
          <a 
            href={link.href} 
            class="footer-link" 
            target="_blank" 
            rel="noopener noreferrer"
          >
            {link.label}
          </a>
        ))}
      </div>
      
      <div class="footer-info text-sm text-muted">
        <p>&copy; {currentYear} DataPup. All rights reserved.</p>
        <p>Released under the MIT License.</p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-content {
    display: grid;
    gap: 2rem;
    text-align: center;
  }
  
  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr auto 1fr;
      align-items: center;
      text-align: left;
    }
    
    .footer-info {
      text-align: right;
    }
  }
  
  .footer-links {
    display: flex;
    gap: 2rem;
    justify-content: center;
  }
  
  .footer-link {
    color: var(--color-text-secondary);
    font-weight: 500;
    transition: color 0.2s ease;
  }
  
  .footer-link:hover {
    color: var(--color-primary);
  }
  
  @media (max-width: 767px) {
    .footer-info {
      order: 3;
    }
  }
  
  .footer-logo {
    color: var(--color-primary);
  }
</style>