---
import Carousel from '../components/Carousel.svelte';
import '../styles/global.css';
---

<section class="hero">
  <div class="hero-background">
    <div class="gradient-mesh"></div>
    <div class="floating-shapes">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
      <div class="shape shape-3"></div>
    </div>
  </div>

  <div class="hero-wrapper">
    <div class="hero-content">
      <!-- <div class="hero-badge glass animate-fade-in">
        <span class="badge-icon">üöÄ</span>
        <span>Open Source & Free</span>
      </div> -->

      <h1 class="hero-title animate-fade-in">
        DataPup
      </h1>

      <p class="hero-tagline animate-fade-in">
        The database client that doesn't bite
      </p>

      <p class="hero-description animate-fade-in">
        Beautiful, fast, and intuitive database client for <strong>ClickHouse</strong>. 
        Built by engineers who understand what developers need.
      </p>

      <div class="hero-cta animate-fade-in">
        <a href="https://github.com/DataPupOrg/DataPup" class="btn btn-primary btn-large">
          <span class="btn-icon">‚≠ê</span> Star on GitHub
        </a>
        <a href="https://github.com/DataPupOrg/DataPup/blob/main/CONTRIBUTING.md" class="btn btn-secondary btn-large">
          <span class="btn-icon">ü§ù</span> Contribute
        </a>
      </div>

      <div class="credentials-badge glass animate-fade-in">
        <span class="badge-icon">üë®‚Äçüíª</span>
        <span>Built by engineers from Tesla, Meta, Microsoft & Amazon</span>
      </div>
  </div>
  <Carousel client:load />
</section>

<style>
  .hero {
    position: relative;
    display: flex;
    align-items: left;
    padding: 6rem 2rem 3rem;
    overflow: hidden;
  }

  .hero-wrapper {
    display: flex;
    justify-content: left;
    align-items: flex-start;
    width: 100%;
    padding: 0 2rem;
    gap: 2rem;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .gradient-mesh {
    position: absolute;
    inset: 0;
    background: var(--gradient-mesh);
    opacity: 0.7;
  }

  .floating-shapes {
    position: absolute;
    inset: 0;
  }

  .shape {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
    animation: float 20s ease-in-out infinite;
  }

  .shape-1 {
    width: 400px;
    height: 400px;
    background: var(--color-primary);
    top: -10%;
    left: -10%;
    animation-delay: 0s;
  }

  .shape-2 {
    width: 300px;
    height: 300px;
    background: var(--color-accent);
    bottom: -5%;
    right: -5%;
    animation-delay: 5s;
  }

  .shape-3 {
    width: 250px;
    height: 250px;
    background: var(--color-primary-light);
    top: 50%;
    left: 70%;
    animation-delay: 10s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  .hero-content {
    flex: 1;
    max-width: 600px;
    margin-top: 7vh;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
  }

  .badge-icon {
    font-size: 1rem;
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 700;
    margin-bottom: 0.5rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 2px 10px rgba(170, 178, 255, 0.3));
  }

  .hero-tagline {
    font-size: 1.5rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.75rem;
    font-weight: 500;
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    max-width: 500px;
  }

  .hero-description strong {
    color: var(--color-primary);
    font-weight: 600;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .btn-large {
    padding: 0.75rem 1.75rem;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 0.75rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    box-shadow: 0 2px 16px rgba(80, 90, 180, 0.08);
    transition: background 0.2s, color 0.2s, transform 0.18s;
    position: relative;
    cursor: pointer;
    border: none;
    outline: none;
  }
  .btn-primary.btn-large {
    background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
    color: #fff;
    border: none;
  }
  .btn-primary.btn-large:hover {
    background: linear-gradient(90deg, var(--color-accent), var(--color-primary));
    color: #fff;
    transform: translateY(-2px) scale(1.03);
    box-shadow: 0 4px 24px rgba(80, 90, 180, 0.18);
  }
  .btn-secondary.btn-large {
    background: var(--color-bg-secondary);
    color: var(--color-primary);
    border: 1.5px solid var(--color-primary);
  }
  .btn-secondary.btn-large:hover {
    background: var(--color-primary);
    color: #fff;
    transform: translateY(-2px) scale(1.03);
    box-shadow: 0 4px 24px rgba(80, 90, 180, 0.18);
  }
  .btn-icon {
    font-size: 1.2em;
    display: flex;
    align-items: center;
  }
  .hero-cta.animate-fade-in {
    opacity: 0;
    animation: fadeInUp 0.9s 0.3s cubic-bezier(0.23, 1, 0.32, 1) forwards;
  }
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .glass {
    background: var(--glass-bg);
    backdrop-filter: var(--blur-md);
    -webkit-backdrop-filter: var(--blur-md);
    border: 1px solid var(--glass-border);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
  }

  .hero-badge { animation-delay: 0.1s; }
  .hero-title { animation-delay: 0.2s; }
  .hero-tagline { animation-delay: 0.3s; }
  .hero-description { animation-delay: 0.4s; }
  .hero-cta { animation-delay: 0.5s; }
  .credentials-badge { animation-delay: 0.6s; }

  .credentials-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 5.5rem 1rem 3rem;
    }

    .hero-content {
      text-align: left;
    }

    .hero-cta {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>