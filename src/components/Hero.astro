<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 2rem 0 4rem;
    overflow: hidden;
  }
  
  .hero-background {
    position: absolute;
    inset: 0;
    z-index: -1;
  }
  
  .gradient-mesh {
    position: absolute;
    inset: 0;
    background: var(--gradient-mesh);
    opacity: 0.7;
  }
  
  .floating-shapes {
    position: absolute;
    inset: 0;
  }
  
  .shape {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
    animation: float 20s ease-in-out infinite;
  }
  
  .shape-1 {
    width: 400px;
    height: 400px;
    background: var(--color-primary);
    top: -10%;
    left: -10%;
    animation-delay: 0s;
  }
  
  .shape-2 {
    width: 300px;
    height: 300px;
    background: var(--color-accent);
    bottom: -5%;
    right: -5%;
    animation-delay: 5s;
  }
  
  .shape-3 {
    width: 250px;
    height: 250px;
    background: var(--color-primary-light);
    top: 50%;
    left: 70%;
    animation-delay: 10s;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }
  
  .hero-content {
    position: relative;
    text-align: center;
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }
  
  .badge-icon {
    font-size: 1rem;
  }
  
  .hero-title {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 700;
    margin-bottom: 0.75rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 2px 10px rgba(170, 178, 255, 0.3));
  }
  
  .hero-tagline {
    font-size: 1.5rem;
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
    font-weight: 500;
  }
  
  .hero-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .hero-description strong {
    color: var(--color-primary);
    font-weight: 600;
  }
  
  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }
  
  .btn-large {
    padding: 0.625rem 1.25rem;
    font-size: 0.9rem;
    font-weight: 600;
    position: relative;
    background: var(--color-bg);
    overflow: visible;
  }
  
  .btn-large::before {
    content: '';
    position: absolute;
    inset: -3px;
    border-radius: 0.75rem;
    padding: 3px;
    background: conic-gradient(
      from var(--angle, 0deg),
      var(--color-primary),
      var(--color-accent),
      var(--color-primary-light),
      var(--color-primary)
    );
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity var(--transition-base);
  }
  
  @property --angle {
    syntax: '<angle>';
    initial-value: 0deg;
    inherits: false;
  }
  
  .btn-large:hover::before {
    opacity: 1;
    animation: rotate-glow 3s linear infinite;
  }
  
  @keyframes rotate-glow {
    from {
      --angle: 0deg;
    }
    to {
      --angle: 360deg;
    }
  }
  
  .btn-primary.btn-large {
    background: var(--gradient-primary);
    color: white;
    border: none;
  }
  
  .btn-secondary.btn-large {
    background: var(--color-bg);
    color: var(--color-primary);
    border: 1px solid var(--color-border);
  }
  
  .btn-large:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(170, 178, 255, 0.3);
  }
  
  /* App Preview */
  .app-preview {
    margin-top: 2rem;
    perspective: 1000px;
  }
  
  .preview-window {
    background: var(--color-card);
    border-radius: 12px;
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    border: 1px solid var(--color-border);
    transform: rotateX(5deg);
    transition: transform var(--transition-base);
  }
  
  .preview-window:hover {
    transform: rotateX(0deg) scale(1.02);
  }
  
  .preview-header {
    background: var(--color-bg-secondary);
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .window-controls {
    display: flex;
    gap: 0.5rem;
  }
  
  .control {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--color-border);
  }
  
  .control.red {
    background: #ff5f57;
  }
  
  .control.yellow {
    background: #ffbd2e;
  }
  
  .control.green {
    background: #28ca42;
  }
  
  .preview-title {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    font-weight: 500;
  }
  
  .preview-content {
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg);
  }
  
  .preview-placeholder {
    text-align: center;
    color: var(--color-text-muted);
  }
  
  .preview-icon {
    width: 80px;
    height: 80px;
    margin-bottom: 1rem;
    opacity: 0.3;
  }
  
  .preview-placeholder p {
    font-size: 1rem;
    font-weight: 500;
  }
  
  /* Glass effect */
  .glass {
    background: var(--glass-bg);
    backdrop-filter: var(--blur-md);
    -webkit-backdrop-filter: var(--blur-md);
    border: 1px solid var(--glass-border);
  }
  
  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  .hero-badge {
    animation-delay: 0.1s;
  }
  
  .hero-title {
    animation-delay: 0.2s;
  }
  
  .hero-tagline {
    animation-delay: 0.3s;
  }
  
  .hero-description {
    animation-delay: 0.4s;
  }
  
  .hero-cta {
    animation-delay: 0.5s;
  }
  
  .app-preview {
    animation-delay: 0.6s;
  }
  
  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0;
    }
    
    .hero-cta {
      flex-direction: column;
      align-items: center;
    }
    
    .preview-window {
      transform: none;
    }
    
    .preview-content {
      height: 300px;
    }
  }
</style>